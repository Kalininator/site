---
import BaseHead from '../components/BaseHead.astro'
import { Image } from 'astro:assets'
import bgImage from '../assets/background-dim-small.jpg'
import githubIcon from '../assets/icons/icons8-github.svg'
import linkedinIcon from '../assets/icons/icons8-linkedin.svg'
import instagramIcon from '../assets/icons/icons8-instagram.svg'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import Layout from '../layouts/Layout.astro'
---

<!doctype html>
<html lang='en'>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class='h-full w-full overflow-hidden'>
    <Image
      class='absolute inset-0 h-screen w-screen object-cover'
      src={bgImage}
      alt='background image'
    />
    <Layout>
      <div
        class='relative z-10 my-[30vh] flex w-full h-full flex-col items-center justify-center gap-y-12'
      >
        <h1 class='text-center font-gugi text-7xl text-[#f4bc4c]'>
          Alex Kalinin
        </h1>
        <p class='w-3/4 text-center text-[#f4bc4c]'>
          Software engineer, travelling the world. Blog mostly about homelab,
          guides, and projects.
        </p>
        <div class='flex h-14 flex-row items-center justify-center gap-x-4'>
          <a href='https://www.github.com/kalininator' target='_blank'>
            <Image src={githubIcon} alt='GitHub' class='h-16 w-16' />
          </a>
          <a href='https://www.linkedin.com/in/kalininator/' target='_blank'>
            <Image src={linkedinIcon} alt='LinkedIn' class='h-16 w-16' />
          </a>
          <a href='https://www.instagram.com/kalininator/' target='_blank'>
            <Image src={instagramIcon} alt='Instagram' class='h-16 w-16' />
          </a>
        </div>
      </div>
    </Layout>
  </body>
</html>
